{
  "preset": "ts-jest",
  "testEnvironment": "jsdom",
  "roots": ["<rootDir>/src", "<rootDir>/test"],
  "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)+(spec|test).ts"],
  "transform": {
    "^.+\\.ts$": "ts-jest"
  },
  "collectCoverageFrom": ["src/**/*.ts", "!src/**/*.d.ts"],
  "moduleFileExtensions": ["ts", "js", "json"],
  "setupFilesAfterEnv": ["<rootDir>/test/setup.ts"]
}
